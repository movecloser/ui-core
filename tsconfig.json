{
    "compilerOptions": {
      "experimentalDecorators": true,
      "target": "ES2019",
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ES2019",
        "ScriptHost"
      ],
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "rootDir": "./src",
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": [".storybook", "node_modules", "**/*.stories.ts", "**/*.test.ts"]
}
