{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2019",
      "ScriptHost"
    ],
    "module": "CommonJS",
    "outDir": "./lib",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2019"
  },
  "exclude": [
    "**/*.stories.ts",
    "**/*.test.ts",
    ".storybook",
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
